<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_videos_tree" model="ir.ui.view">
        <field name="name">video.tree</field>
        <field name="model">video</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="match" />
            </list>
        </field>
    </record>

    <record id="view_video_form" model="ir.ui.view">
        <field name="name">video.form</field>
        <field name="model">video</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="match" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_video" model="ir.actions.act_window">
        <field name="name">Video</field>
        <field name="res_model">video</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_video_root" name="Video" parent="root_menu" action="action_video"/>
</odoo>
