<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree (list) view -->
    <record id="view_clubs_tree" model="ir.ui.view">
        <field name="name">nextmatch.tree</field>
        <field name="model">next.match</field>
        <field name="arch" type="xml">
            <list>
                    <field name="away_club_id"/>
                    <field name="home_club_id"/>
                    <field name="away_photo"/>
                    <field name="home_photo"/>
                    <field name="date"/>
                    <field name="stadium"/>
                    <field name="tournament"/>
                    <field name="link" />
            </list>
        </field>
    </record>

    <record id="view_clubs_form" model="ir.ui.view">
        <field name="name">nextmatch.form</field>
        <field name="model">next.match</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                            <field name="away_club_id"/>
                            <field name="home_club_id"/>
                            <field name="away_photo"/>
                            <field name="home_photo"/>
                            <field name="date"/>
                            <field name="stadium"/>
                            <field name="tournament"/>
                            <field name="link" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_next_match" model="ir.actions.act_window">
        <field name="name">Next Match</field>
        <field name="res_model">next.match</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_next_match" name="Next match" parent="root_menu" action="action_next_match"/>
</odoo>
