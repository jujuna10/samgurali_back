<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_news" model="ir.ui.view">
        <field name="name">news.list</field>
        <field name="model">news</field>
        <field name="arch" type="xml">
            <list>
                <field name="title" />
                <field name="date" />
                <field name="text" />
                <field name="image" />
            </list>
        </field>
    </record>

    <record id="view_news_form" model="ir.ui.view">
        <field name="name">news</field>
        <field name="model">news</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="title" />
                    <field name="date" />
                    <field name="text" />
                    <field name="image" />
                </group>
            </form>
        </field>
    </record>

    <record id="action_news" model="ir.actions.act_window">
        <field name="name">News</field>
        <field name="res_model">news</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_news" name="News" parent="root_menu" action="action_news">

    </menuitem>
</odoo>