<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree (list) view -->
    <record id="view_clubs_tree" model="ir.ui.view">
        <field name="name">lastmatch.tree</field>
        <field name="model">last.match</field>
        <field name="arch" type="xml">
            <list>
                    <field name="away_club_id"/>
                    <field name="home_club_id"/>
                    <field name="away_photo"/>
                    <field name="home_photo"/>
                    <field name="away_team_goals"/>
                    <field name="home_team_goals"/>
                    <field name="date"/>
                    <field name="stadium"/>
                    <field name="tournament"/>
                    <field name="photos_ids" widget="image"  />
            </list>
        </field>
    </record>

    <record id="view_clubs_form" model="ir.ui.view">
        <field name="name">lastmatch.form</field>
        <field name="model">last.match</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                            <field name="away_club_id"/>
                            <field name="home_club_id"/>
                            <field name="away_photo"/>
                            <field name="home_photo"/>
                            <field name="away_team_goals"/>
                            <field name="home_team_goals"/>
                            <field name="date"/>
                            <field name="stadium"/>
                            <field name="tournament"/>
                            <field name="photos_ids">
                                <list>
                                    <field name="image" widget="image" />
                                </list>
                            </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_last_match" model="ir.actions.act_window">
        <field name="name">Last match</field>
        <field name="res_model">last.match</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
