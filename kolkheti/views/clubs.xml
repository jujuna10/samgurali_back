<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree (list) view -->
    <record id="view_clubs_tree" model="ir.ui.view">
        <field name="name">clubs.tree</field>
        <field name="model">clubs</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="club_image" />
            </list>
        </field>
    </record>

    <record id="view_clubs_form" model="ir.ui.view">
        <field name="name">clubs.form</field>
        <field name="model">clubs</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="club_image" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_clubs" model="ir.actions.act_window">
        <field name="name">Clubs</field>
        <field name="res_model">clubs</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_clubs_root" name="Clubs" parent="root_menu" action="action_clubs"/>
</odoo>
